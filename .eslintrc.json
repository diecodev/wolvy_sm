{
  "extends": [
    "./node_modules/ts-standard/eslintrc.json"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/no-misused-promises": [
      "error",
      {
        "checksSpreads": false,
        "checksVoidReturn": false,
        "checksConditionals": false
      }
    ]
  }
}